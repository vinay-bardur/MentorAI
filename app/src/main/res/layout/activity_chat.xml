<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ios_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/mentorTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="VisionAI"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/ios_text" />

            <Button
                android:id="@+id/togglePanelButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Panel (1v5)"
                android:textSize="11sp"
                android:textAllCaps="false"
                android:paddingHorizontal="12dp"
                android:backgroundTint="@color/ios_primary"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/toggleSingleButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:text="Single (1v1)"
                android:textSize="11sp"
                android:textAllCaps="false"
                android:paddingHorizontal="12dp"
                android:backgroundTint="@android:color/darker_gray"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/singleMentorSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mentor:"
                android:textSize="14sp"
                android:textColor="@color/ios_text"
                android:paddingEnd="8dp" />

            <Spinner
                android:id="@+id/mentorSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ios_divider" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

    <ProgressBar
        android:id="@+id/loadingIndicator"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/inputMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ask your mentor..."
            android:background="@drawable/ios_input_bg"
            android:padding="8dp"
            android:textColor="@color/ios_text"
            android:textColorHint="@color/ios_placeholder" />

        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_send"
            android:contentDescription="Send"
            android:background="@android:color/transparent"
            android:tint="@color/ios_primary" />
    </LinearLayout>

</LinearLayout>
