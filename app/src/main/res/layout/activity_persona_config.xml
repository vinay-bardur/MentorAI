<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ios_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your mentor"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/ios_text"
        android:paddingBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mentorRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/startChatButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start session"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/ios_primary"
        android:textColor="@color/white"
        android:enabled="false" />

</LinearLayout>
